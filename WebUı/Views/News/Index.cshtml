@model IEnumerable<WebUı.Models.News>

@{
    ViewData["Title"] = "Haber Yönetimi";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<div class="card shadow">
    <div class="card-header bg-gradient-primary text-white py-3">
        <div class="d-flex justify-content-between align-items-center">
            <h3 class="card-title mb-0">Haber Listesi</h3>
            <a asp-action="Create" class="btn btn-light">
                <i class="fas fa-plus"></i> Yeni Haber
            </a>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table id="newsTable" class="table table-hover">
                <thead>
                    <tr>
                        <th>Görsel</th>
                        <th>Başlık</th>
                        <th>Kategori</th>
                        <th>Görüntülenme</th>
                        <th>Durum</th>
                        <th>Tarih</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js"></script>
    <script>
        $(document).ready(function () {
            var table = $('#newsTable').DataTable({
                "processing": true,
                "serverSide": false,
                "ajax": {
                    "url": "/News/GetNews",
                    "type": "GET",
                    "datatype": "json"
                },
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.24/i18n/Turkish.json"
                },
                "columns": [
                    { 
                        "data": "imagePath",
                        "render": function(data) {
                            return `<img src="${data}" class="img-thumbnail" style="height:50px;">`;
                        },
                        "orderable": false
                    },
                    { 
                        "data": "title",
                        "render": function(data) {
                            return `<div class="text-wrap" style="max-width:200px;">${data}</div>`;
                        }
                    },
                    { 
                        "data": "category.name",
                        "render": function(data) {
                            return `<span class="badge badge-info">${data}</span>`;
                        }
                    },
                    { 
                        "data": "viewCount",
                        "render": function(data) {
                            return `<span class="badge badge-secondary">${data}</span>`;
                        }
                    },
                    {
                        "data": "isActive",
                        "render": function (data) {
                            return data ? 
                                '<span class="badge badge-success"><i class="fas fa-check mr-1"></i>Aktif</span>' : 
                                '<span class="badge badge-danger"><i class="fas fa-times mr-1"></i>Pasif</span>';
                        }
                    },
                    { 
                        "data": "createdDate",
                        "render": function(data) {
                            return moment(data).format('DD.MM.YYYY HH:mm');
                        }
                    },
                    {
                        "data": "id",
                        "render": function (data) {
                            return `
                                <div class="btn-group">
                                    <a href="/News/Edit/${data}" class="btn btn-primary btn-sm" data-toggle="tooltip" title="Düzenle">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <button class="btn btn-danger btn-sm" onclick="deleteNews(${data})" data-toggle="tooltip" title="Sil">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>`;
                        },
                        "orderable": false
                    }
                ],
                "order": [[5, "desc"]], // Tarihe göre sırala
                "pageLength": 10,
                "dom": '<"row"<"col-sm-12 col-md-6"l><"col-sm-12 col-md-6"f>>' +
                       '<"row"<"col-sm-12"tr>>' +
                       '<"row"<"col-sm-12 col-md-5"i><"col-sm-12 col-md-7"p>>'
            });

            // Tooltip'leri etkinleştir
            $('[data-toggle="tooltip"]').tooltip();
        });

        // Silme fonksiyonu
        function deleteNews(id) {
            Swal.fire({
                title: 'Emin misiniz?',
                text: "Bu haberi silmek istediğinize emin misiniz?",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Evet, sil!',
                cancelButtonText: 'İptal'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.post('/News/Delete/' + id, function(response) {
                        if (response.success) {
                            $('#newsTable').DataTable().ajax.reload();
                            toastr.success(response.message);
                        } else {
                            toastr.error(response.message);
                        }
                    });
                }
            });
        }

        // Stil tanımlamaları
        $('<style>')
            .prop('type', 'text/css')
            .html(`
                .card { border: none; }
                .table thead th { 
                    background-color: #f8f9fa;
                    border-top: none;
                    font-weight: 600;
                }
                .table td { 
                    vertical-align: middle;
                }
                .badge { 
                    font-size: 85%;
                    padding: 5px 10px;
                }
                .btn-group .btn { 
                    margin: 0 2px;
                }
                .btn-group .btn:hover { 
                    transform: translateY(-2px);
                    transition: all 0.3s;
                }
                .dataTables_wrapper .row { 
                    margin: 15px 0;
                }
                .dataTables_filter input { 
                    border-radius: 20px;
                    padding-left: 15px;
                }
                .page-item.active .page-link {
                    background-color: #4e73df;
                    border-color: #4e73df;
                }
            `)
            .appendTo('head');
    </script>
}

