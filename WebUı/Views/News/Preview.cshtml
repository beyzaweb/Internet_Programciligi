@model News
@{
    ViewData["Title"] = "Haber Önizleme";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">
                <i class="fas fa-eye mr-2"></i>Haber Önizleme
            </h6>
            <div>
                <button class="btn btn-success btn-sm mr-2" onclick="approveNews(@Model.Id)">
                    <i class="fas fa-check mr-1"></i>Onayla
                </button>
                <button class="btn btn-danger btn-sm mr-2" onclick="rejectNews(@Model.Id)">
                    <i class="fas fa-times mr-1"></i>Reddet
                </button>
                <a href="@Url.Action("PendingNews")" class="btn btn-secondary btn-sm">
                    <i class="fas fa-arrow-left mr-1"></i>Geri Dön
                </a>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-lg-8">
                    <!-- Haber Ýçeriði -->
                    <div class="mb-4">
                        <h2 class="mb-3">@Model.Title</h2>
                        <img src="@Model.ImagePath" class="img-fluid rounded mb-4" alt="@Model.Title">
                        <div class="content">
                            @Html.Raw(Model.Content)
                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <!-- Haber Detaylarý -->
                    <div class="card shadow-sm">
                        <div class="card-header bg-light">
                            <h6 class="mb-0">Haber Detaylarý</h6>
                        </div>
                        <div class="card-body">
                            <ul class="list-unstyled">
                                <li class="mb-3">
                                    <strong><i class="fas fa-user mr-2"></i>Yazar:</strong>
                                    <span class="ml-2">@Model.User?.UserName</span>
                                </li>
                                <li class="mb-3">
                                    <strong><i class="fas fa-folder mr-2"></i>Kategori:</strong>
                                    <span class="ml-2">@Model.Category?.Name</span>
                                </li>
                                <li class="mb-3">
                                    <strong><i class="fas fa-calendar mr-2"></i>Tarih:</strong>
                                    <span class="ml-2">@Model.CreatedDate.ToString("dd.MM.yyyy HH:mm")</span>
                                </li>
                                <li class="mb-3">
                                    <strong><i class="fas fa-clock mr-2"></i>Durum:</strong>
                                    <span class="badge badge-warning ml-2">Onay Bekliyor</span>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function approveNews(id) {
            Swal.fire({
                title: 'Onaylamak istediðinize emin misiniz?',
                text: "Bu haber yayýna alýnacak",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Evet, Onayla',
                cancelButtonText: 'Ýptal'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.post('/News/ApproveNews/' + id)
                        .done(function(response) {
                            if (response.success) {
                                Swal.fire('Onaylandý!', response.message, 'success')
                                    .then(() => {
                                        window.location.href = '/News/PendingNews';
                                    });
                            } else {
                                Swal.fire('Hata!', response.message, 'error');
                            }
                        })
                        .fail(function() {
                            Swal.fire('Hata!', 'Ýþlem sýrasýnda bir hata oluþtu.', 'error');
                        });
                }
            });
        }

        function rejectNews(id) {
            Swal.fire({
                title: 'Red Sebebi',
                input: 'text',
                inputLabel: 'Lütfen red sebebini yazýn',
                inputPlaceholder: 'Red sebebi...',
                showCancelButton: true,
                confirmButtonText: 'Reddet',
                cancelButtonText: 'Ýptal',
                inputValidator: (value) => {
                    if (!value) {
                        return 'Red sebebi yazmalýsýnýz!'
                    }
                }
            }).then((result) => {
                if (result.isConfirmed) {
                    $.post('/News/RejectNews', { id: id, reason: result.value })
                        .done(function(response) {
                            if (response.success) {
                                Swal.fire('Reddedildi!', response.message, 'success')
                                    .then(() => {
                                        window.location.href = '/News/PendingNews';
                                    });
                            } else {
                                Swal.fire('Hata!', response.message, 'error');
                            }
                        })
                        .fail(function() {
                            Swal.fire('Hata!', 'Ýþlem sýrasýnda bir hata oluþtu.', 'error');
                        });
                }
            });
        }
    </script>

    <style>
        .content {
            font-size: 1.1rem;
            line-height: 1.8;
        }

            .content img {
                max-width: 100%;
                height: auto;
            }

        .card-header .btn-sm {
            padding: 0.25rem 0.75rem;
        }

        .list-unstyled li {
            padding: 0.5rem 0;
            border-bottom: 1px solid rgba(0,0,0,.05);
        }

            .list-unstyled li:last-child {
                border-bottom: none;
            }
    </style>
} 